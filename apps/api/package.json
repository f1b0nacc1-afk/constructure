    "socket.io": "^4.7.2",
    "prisma": "^5.4.2",
    "@prisma/client": "^5.4.2",
    "redis": "^4.6.8",
    "bcryptjs": "^2.4.3",
    "zod": "^3.22.2",
    "cloudinary": "^1.40.0",
    "@constructure/types": "workspace:*",
    "@constructure/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.5.2",
    "@types/bcryptjs": "^2.4.4",
    "typescript": "^5.1.6",
    "tsx": "^3.12.10",
    "eslint": "^8.47.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
