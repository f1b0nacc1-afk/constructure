{
  "name": "constructure",
  "version": "0.1.0",
  "description": "Визуальный конструктор образовательных курсов",
  "private": true,
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "build:web": "cd apps/web && npm run build",
    "build:api": "cd apps/api && npm run build",
    "build": "npm run build:api && npm run build:web",
    "install:web": "cd apps/web && npm install",
    "install:api": "cd apps/api && npm install",
    "install:all": "npm run install:web && npm run install:api",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.2",
    "prettier": "^3.0.0",
    "eslint": "^8.51.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "author": "Constructure Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/f1b0nacc1-afk/constructure.git"
  },
  "bugs": {
    "url": "https://github.com/f1b0nacc1-afk/constructure/issues"
  },
  "homepage": "https://github.com/f1b0nacc1-afk/constructure#readme"
} 